@model Discussion

<div class="container mt-4">
    <!-- Discussion Image -->
    @if (!string.IsNullOrEmpty(Model.ImageFileName))
    {
        <img src="~/images/@Model.ImageFileName" alt="Thumbnail" class="img-fluid rounded mb-3" style="max-width:75%; height: auto;">
    }

    <!-- Title -->
    <h1 class="fw-bold">@Model.Title</h1>

    
    <p class="text-muted"><strong>Posted on:</strong> @Model.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</p>

    <!-- Discussion Content -->
    <div class="border p-3 bg-light rounded mb-4">
        <p>@Model.Content</p>
    </div>

    <!-- Comments Section -->
    <h3 class="mt-4">Comments</h3>
    <div class="list-group">
        @foreach (var comment in Model.Comments)
        {
            <div class="list-group-item">
                <p class="text-muted small mb-1"><strong>Posted on:</strong> @comment.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <p class="mb-0">@comment.Content</p>
            </div>
        }
    </div>

    <!-- Add Comment Button -->
    <a href="@Url.Action("Create", "Comments", new { discussionId = Model.DiscussionId })" class="btn btn-primary my-3">
        <i class="bi bi-chat-dots"></i> Add Comment
    </a>
</div>